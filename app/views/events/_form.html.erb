
<%= simple_form_for [@event] do |f| %>
  <%= f.input :name, label: " Who's Do? "%>
  <%= f.input :location, label: " Where is the Do? " %>
  <%= f.input :start_date, as: :date, html5: true, label: " When does the Do start? " %>
  <%= f.input :end_date, as: :date, html5: true, label: " When does the Do end? "  %>
  <%= f.submit class: "btn-flat" %>
<% end %>
