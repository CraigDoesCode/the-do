<div class="sign-in">
<%= image_tag("logo.png") %>

<div class="pt-5">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" id="form">
    <%= f.input :first_name,
                required: true,
                autofocus: true %>
    <%= f.input :last_name,
                required: true,
                autofocus: true %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :photo, as: :file %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
                <% @event = Event.create() %>
    <%=f.hidden_field :event_id, value: "#{@event.id}" %>
  </div>
  <%= f.button :submit, "Sign up", class: "btn-flat-gold my-3", style: "font-size: 24px; padding: 6px 32px" %>
<% end %>

<div class="text-center">
  <%= link_to :back do %>
  <i class="fa-solid fa-left-long" style= "font-size:20px; color:grey; padding-top:10px"></i>
  <% end %>
</div>
</div>
</div>
