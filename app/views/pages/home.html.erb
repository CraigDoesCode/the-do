        <%= link_to 'START NOW', new_user_registration_path, class: "btn-flat-gold mb-2"%>
      </div>
  </div>
</div>

<div class="feature-grid">
  <div class="d-flex justify-content-center flex-column text-center py-5 feature ">
    <i class="fa-solid fa-bars-progress" style="color: #C8A323; font-size: 2rem"></i>
    <p>Progress Tracker</p>
  </div>
  <div class="d-flex justify-content-center flex-column text-center py-5 feature">
    <i class="fa-solid fa-star" style="color: #C8A323; font-size: 2rem"></i>
