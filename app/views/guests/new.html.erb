<br>
<div class="text-center">
 <h1>Add Guest</h1>
 </div>
<div class="form-body overlay">
  <div class="form-container">
    <div class="container container-form">
    <br>
      <%= simple_form_for [@event, @guest] do |f| %>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :photo, as: :file %>
        <%= f.input :phone_number %>
        <%= f.input :attending %>
        <%= f.input :paid %>
        <div class = "pt-2" style="text-align:center">
          <%= f.button :submit, class: "btn btn-dark btn-lg"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br>
<div class="text-center">
<%= link_to "Back to Guests", event_guests_path(current_user.event_id), class: "btn btn-dark" %>
</div>
