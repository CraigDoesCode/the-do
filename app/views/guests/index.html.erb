<body class="d-flex flex-column min-vh-100" style="font-family: 'K2D', sans-serif;">
<h1 class="text-center">Who</h1>
<% if @guests.empty? == true %>
  <table class="table-borderless my-3 mx-5" style="font-size: 12px">
    <thead>
      <tr class="text-center">
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody >
    <tr style="text-align: center; vertical-align: center;">
      <th scope="row">
        <div class="d-flex">
          <div class="rounded-circle border d-flex justify-content-center align-items-center mt-1" style="width:40px;height:40px" alt="Avatar">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar", style:"object-fit: cover" %>
            <% else %>
              <i class="fas fa-user-alt fa-2x text-info"></i>
            <% end %>
          </div>
          <div class="pt-3">
            <%= current_user.first_name %> <%= current_user.last_name %>
          </div>
        </div>
      </th>
    </tr>

     <tr style="text-align: center; vertical-align: center;">
      <th scope="row">
        <div class="d-flex">
          <div class="rounded-circle border d-flex justify-content-center align-items-center mt-1" style="width:40px;height:40px" alt="Avatar">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar", style:"object-fit: cover" %>
            <% else %>
              <i class="fas fa-user-alt fa-2x text-info"></i>
            <% end %>
          </div>
          <div class="pt-3">
            <%= Guest.new(name: @event.name, event_id: current_user.event_id).save %>
          </div>
        </div>
      </th>
    </tr>
  </tbody>
</table>
  <br>
  <div class="container text-center">
    <%= link_to "Add Guest", new_event_guest_path(current_user.event_id), class: "btn btn-dark" %>
  </div>
<% else %>
  <table class="table-sm table-borderless m-4" style="font-size: 12px">
  <thead>
    <tr class="text-center">
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col">Attending</th>
      <th scope="col">Paid</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody >
    <% @guests.each do |guest| %>
      <tr class="border-bottom" style="text-align: center; vertical-align: center;">
        <th scope="row">
          <div class="d-flex">
            <div class="rounded-circle d-flex justify-content-center align-items-center mt-1" style="width:40px;height:40px" alt="Avatar">
              <% if guest.photo.attached? %>
                <%= cl_image_tag guest.photo.key, class: "avatar", style:"object-fit: cover" %>
              <% else %>
                <i class="fas fa-user-alt fa-2x text-info"></i>
              <% end %>
            </div>
            <div class="pt-3">
              <%= guest.name %>
            </div>
          </div>
        </th>
        <td class="text-center p-2">
          <%= link_to edit_event_guest_path(guest.event_id, guest.id), :style=>'color: black; font-size: 17px' do %>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
        </td>
        <td>
          <div style="color: #E5B705; font-size: 18px;">
            <% if guest.attending == true %>
            <i class="fa-solid fa-check"></i>
          <% end %>
          </div>
        </td>
         <td>
          <div style="color: #E5B705; font-size: 18px;">
            <% if guest.paid == true %>
              <i class="fa-solid fa-check"></i>
            <% end %>
          </div>
        </td>
         <td class="text-center p-3">
           <% if guest.name != @event.name %>
          <%= link_to guest_path(guest), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :style=>'color: black; font-size: 17px' do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr class="border-bottom" style="text-align: center; vertical-align: center;">
      <th scope="row">
        <div class="d-flex">
          <div class="rounded-circle d-flex justify-content-center align-items-center mt-1" style="width:40px;height:40px" alt="Avatar">
            <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, class: "avatar", style:"object-fit: cover" %>
              <% else %>
                <i class="fas fa-user-alt fa-2x text-info"></i>
              <% end %>
          </div>
          <div class="pt-3">
            <%= current_user.first_name %> <%= current_user.last_name %>
          </div>
        </div>
      </th>
      <td>
      </td>
      <td>
        <div style="color: #E5B705; font-size: 18px;">
          <i class="fa-solid fa-check"></i>
        </div>
      </td>
        <td>
        <div style="color: #E5B705; font-size: 18px;">
            <i class="fa-solid fa-check"></i>
        </div>
      </td>
      <td>
      </td>
    </tr>
  </tbody>
</table>
<br>
<div class="container text-center">
    <%= link_to "Add Guest", new_event_guest_path(@guests.first.event_id), class: "btn btn-dark" %>
  </div>
<br>
<div class="container d-flex p-2">
  <div class="container">
    <%= link_to "RSVP Reminder", event_guests_path(@guests.first.event_id), class: "btn", style: "background-color: #E5B707;" %>
  </div>
  <div class="container">
    <%= link_to "Payment Reminder", event_guests_path(@guests.first.event_id), class: "btn", style: "background-color: #E5B707;" %>
  </div>
</div>
<% end %>
<%= render "shared/footer" %>
</body>
