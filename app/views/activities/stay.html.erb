<body class="d-flex flex-column min-vh-100">
<br>

<h1 class="d-flex justify-content-center"><strong>Stay</strong> </h1>
<br>
<h3 class="recommended-activity-title">Top 5 Recommended Places to Stay in <strong><%= @event.location %></strong></h3></div>
<div class="recommended-activities">
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="top-activities">
        <p class="book-now">Book Now</p>
            <%# <i class="fa-solid fa-star" id="restaurant-star-saved"></i> - for when item is saved (solid star) %>
          <i class="fa-regular fa-star" id="activity-star"></i>
            <%= image_tag("With Nature.jpg", style: "width: 100", class: 'd-block w-100 h-75') %>
              <div class="carousel-caption d-block" id="activity-name">
                <h5>In The Wild</h5>
              </div>
      </div>
    </div>
    <div class="carousel-item">
        <div class="top-activities">
          <p class="book-now">Book Now</p>
              <%# <i class="fa-solid fa-star" id="restaurant-star-saved"></i> - for when item is saved (solid star) %>
            <i class="fa-regular fa-star" id="activity-star"></i>
                <%= image_tag("glamping.jpg", style: "width: 100", class: 'd-block w-100 h-75') %>
                  <div class="carousel-caption d-block" id="activity-name">
                    <h5>Glamping</h5>
                  </div>
        </div>
    </div>
    <div class="carousel-item">
        <div class="top-activities">
          <p class="book-now">Book Now</p>
              <%# <i class="fa-solid fa-star" id="activity-star-saved"></i> - for when item is saved (solid star) %>
            <i class="fa-regular fa-star" id="activity-star"></i>
              <%= image_tag("mews.jpg", style: "width: 100", class: 'd-block w-100 h-75') %>
                <div class="carousel-caption d-block" id="activity-name">
                  <h5>Cosy Cottage</h5>
                </div>
        </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
</div>
<br>
<br>

<div class="container text-center">
  <%= link_to "Back", event_path(current_user.event_id), class: "btn btn-dark" %>
</div>

<%= render "shared/footer" %>
</body>
